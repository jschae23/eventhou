<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context="com.example.eventhou.ui.MainActivity">

        <LinearLayout
            android:id="@+id/scrollview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:orientation="vertical">

            <include
                android:id="@+id/favoritesToday"
                layout="@layout/fragment_favourites_section"
                app:label="@{@string/today}" />

            <include
                android:id="@+id/favoritesTomorrow"
                layout="@layout/fragment_favourites_section"
                app:label="@{@string/tomorrow}" />

            <include
                android:id="@+id/favoritesWeek"
                layout="@layout/fragment_favourites_section"
                app:label="@{@string/this_week}" />

            <include
                android:id="@+id/favoritesMonth"
                layout="@layout/fragment_favourites_section"
                app:label="@{@string/next_weeks}" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</layout>